{
  "title": "<%= project_name %>",
  "name": "<%= slug %>",
  "version": "0.1.0",
  "description": "<%= project_description %>",
  "repository": {
    "type": "git",
    "url": "<%= project_url %>.git"
  },
  "author": "<%= author_info %>",
<% if (license !== 'none') { %>
  "license": "<%= license %>",
<% } %>
  "bugs": {
    "url": "<%= project_url %>/issues"
  },
  "homepage": "<%= project_url %>",
  "devDependencies": {
    "grunt": "*",
    "grunt-coffeelint": "*",
    "grunt-contrib-uglify": "*",
    "grunt-contrib-watch": "*",
    "grunt-contrib-jasmine": "*",
    "grunt-contrib-coffee": "*",
    "grunt-bump": "*",
    "grunt-conventional-changelog": "*",
    <% if (include_less) { %>
    "grunt-contrib-less": "*",
    "grunt-contrib-cssmin": "*",
    <% } %>
    "load-grunt-tasks": "*"
  }
}
