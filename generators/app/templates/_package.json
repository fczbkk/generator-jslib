{
  "name": "<%= slug %>",
  "version": "0.0.1",
  "description": "<%= description %>",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/<%= github_account %>/<%= slug %>.git"
  },
  "author": {
    "name": "Riki Fridrich",
    "email": "riki@fczbkk.com",
    "url": "http://fczbkk.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/<%= github_account %>/<%= slug %>/issues"
  },
  "homepage": "https://github.com/<%= github_account %>/<%= slug %>#readme",
  "scripts": {
    "cleanup": "rimraf temp lib",
    "prebuild": "npm run test && npm run cleanup && npm run eslint:build",
    "build": "babel src -d lib",
    "test": "karma start ./karma.conf.js",
    "dev": "npm run test -- --no-single-run --auto-watch",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postversion": "git push && git push --tags<% if (publish_to_npm) { %> && npm publish<% } %>",
    "version": "npm run build && npm run changelog && git add -A",
    "doc": "documentation readme ./src/index.js -s 'Documentation'",
    "eslint": "eslint ./{src,test}/**/*.js",
    "eslint:build": "npm run eslint -- --max-warnings 0"
  },
  <% if (!publish_to_npm) { %>"private": true,<% } %>
  "main": "lib/index.js"
}
